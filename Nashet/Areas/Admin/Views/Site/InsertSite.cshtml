@model SiteViewModel
<section class="page_wrap">
    <div class="page_content">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }
        @if (TempData["Duplicate"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Duplicate"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        @if (TempData["Duplicate"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Duplicate"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة جهة</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="InsertSite">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="SiteCode" for="" class="mb-1"></label>
                                    <input asp-for="SiteCode" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="SiteCode"></span>
                                </div><!-- END ITEM -->
                            </div>
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <!-- START ITEM -->
                                    <label asp-for="SiteNameAR" class="mb-1"></label>
                                    <input asp-for="SiteNameAR" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="SiteNameAR"></span>
                                </div><!-- END ITEM -->

                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="SiteNameEn" class="mb-1"></label>
                                    <input asp-for="SiteNameEn" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="SiteNameEn"></span>
                                </div><!-- END ITEM -->
                                
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->