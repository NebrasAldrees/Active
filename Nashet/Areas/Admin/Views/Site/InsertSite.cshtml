@model SiteViewModel
<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة جهة</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form id="insertSiteForm" asp-action="InsertSite" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="SiteCode" for="" class="mb-1"></label>
                                    <input asp-for="SiteCode" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="SiteCode"></span>
                                </div><!-- END ITEM -->
                            </div>
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <!-- START ITEM -->
                                    <label asp-for="SiteNameAR" class="mb-1"></label>
                                    <input asp-for="SiteNameAR" type="text" class=" form-control" id="arabicName" pattern="[\u0600-\u06FF\s]+" title="يرجى إدخال نص عربي فقط">
                                    <span style="color:red" asp-validation-for="SiteNameAR"></span>
                                </div><!-- END ITEM -->

                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="SiteNameEn" class="mb-1"></label>
                                    <input asp-for="SiteNameEn" type="text" class="form-control" id="englishName" pattern="[A-Za-z\s]+" title="يرجى إدخال نص إنجليزي فقط">
                                    <span style="color:red" asp-validation-for="SiteNameEn"></span>
                                </div><!-- END ITEM -->
                                
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById('arabicName').addEventListener('input', function(e) {
                        this.value = this.value.replace(/[^\u0600-\u06FF\s]/g, '');
                    });

                    document.getElementById('englishName').addEventListener('input', function(e) {
                        this.value = this.value.replace(/[^A-Za-z\s]/g, '');
                    });
        document.getElementById('insertSiteForm').addEventListener('submit', function (e) {
            e.preventDefault();

            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: 'سيتم إضافة الجهة الجديدة وسيتم نقلك إلى صفحة قائمة الجهات',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'نعم، أضف وأنتقل',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    const formData = new FormData(this);

                    fetch(this.action, {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'تمت الإضافة',
                                icon: 'success',
                                confirmButtonText: 'موافق'
                            }).then(() => {
                                window.location.href = '@Url.Action("ViewSites", "Site", new { area = "Admin" })';
                            });
                        } else if (data.duplicate) {
                            Swal.fire({
                                title: 'تنبيه',
                                text: 'البيانات موجودة مسبقًا',
                                icon: 'warning',
                                confirmButtonText: 'موافق'
                            });
                        } else {
                            Swal.fire({
                                title: 'خطأ',
                                text: 'فشل في إضافة الجهة',
                                icon: 'error',
                                confirmButtonText: 'موافق'
                            });
                        }
                    })
                    .catch(error => {
                        Swal.fire({
                            title: 'خطأ!',
                            text: 'حدث خطأ أثناء الإضافة: ' + error,
                            icon: 'error',
                            confirmButtonText: 'موافق'
                        });
                    });
                }
            });
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}