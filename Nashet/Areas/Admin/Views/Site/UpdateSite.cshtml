@model SiteViewModel
<section class="page_wrap">
    <div class="page_content">
        <!-- START ALERT MESSAGES -->
        @if (TempData["Successful"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["Successful"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Duplicate"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Duplicate"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Failed"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-times-circle me-2"></i> @TempData["Failed"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-info-circle me-2"></i> @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <!-- END ALERT MESSAGES -->

        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">تحديث بيانات جهة</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="UpdateSite" method="post">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <input type="hidden" asp-for="Guid" />
                                <input type="hidden" asp-for="SiteId" />
                                <input type="hidden" asp-for="SiteCode" />

                                <div class="col-md-6">
                                    <label asp-for="SiteNameAR" class="mb-1"></label>
                                    <input asp-for="SiteNameAR" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="SiteNameAR"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="SiteNameEn" class="mb-1"></label>
                                    <input asp-for="SiteNameEn" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="SiteNameEn"></span>
                                </div>

                                <div class="form-group mt-4">
                                    <button type="submit" class="btn btn-primary">حفظ التعديلات</button>
                                    <a asp-action="ViewSites" class="btn btn-secondary">إلغاء</a>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->