@model SiteViewModel
<section class="page_wrap">
    <div class="page_content">

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }

        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">تحديث بيانات جهة</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="UpdateSite" method="post">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <input type="hidden" asp-for="Guid" />
                                <input type="hidden" asp-for="SiteId" />
                                <input type="hidden" asp-for="SiteCode" />

                                <div class="col-md-6">
                                    <label asp-for="SiteNameAR" class="mb-1"></label>
                                    <input asp-for="SiteNameAR" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="SiteNameAR"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="SiteNameEn" class="mb-1"></label>
                                    <input asp-for="SiteNameEn" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="SiteNameEn"></span>
                                </div>

                                <div class="form-group mt-4">
                                    <button type="submit" class="btn btn-primary">حفظ التعديلات</button>
                                    <a asp-action="ViewSites" class="btn btn-secondary">إلغاء</a>

                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->