@model SiteViewModel
<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">تحديث بيانات جهة</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form id="updateSiteForm" asp-action="UpdateSite" method="post">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <input type="hidden" asp-for="Guid" />
                                <input type="hidden" asp-for="SiteId" />
                                <input type="hidden" asp-for="SiteCode" />

                                <div class="col-md-6">
                                    <label asp-for="SiteNameAR" class="mb-1"></label>
                                    <input asp-for="SiteNameAR" type="text" class="form-control" id="arabicName" pattern="[\u0600-\u06FF\s]+" title="يرجى إدخال نص عربي فقط">
                                    <span style="color:red" asp-validation-for="SiteNameAR"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="SiteNameEn" class="mb-1"></label>
                                    <input asp-for="SiteNameEn" type="text" class="form-control" id="englishName" pattern="[A-Za-z\s]+" title="يرجى إدخال نص إنجليزي فقط">
                                    <span style="color:red" asp-validation-for="SiteNameEn"></span>
                                </div>

                                <div class="form-group mt-4">
                                    <button type="submit" class="btn btn-primary">حفظ التعديلات</button>
                                    <a asp-action="ViewSites" class="btn btn-secondary">إلغاء</a>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // قيود على اسم النادي بالعربية فقط
        document.getElementById('arabicName').addEventListener('input', function(e) {
            // السماح فقط بالأحرف العربية والمسافات
            this.value = this.value.replace(/[^\u0600-\u06FF\s]/g, '');
        });

        // قيود على اسم النادي بالإنجليزية فقط
        document.getElementById('englishName').addEventListener('input', function(e) {
            // السماح فقط بالأحرف الإنجليزية والمسافات
            this.value = this.value.replace(/[^A-Za-z\s]/g, '');
        });
        // Form submission with confirmation
        document.getElementById('updateSiteForm').addEventListener('submit', function (e) {
            e.preventDefault();

            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: 'سيتم حفظ التعديلات وسيتم نقلك إلى صفحة قائمة الجهات',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'نعم، احفظ وأنتقل',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    // أرسل الفورم أولاً
                    const formData = new FormData(this);

                    fetch(this.action, {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => {
                        if (response.ok) {
                            // بعد الإرسال الناجح، انتقل إلى صفحة الأنشطة
                            window.location.href = '@Url.Action("ViewSites", "Site", new { area = "Admin" })';
                        } else {
                            Swal.fire({
                                title: 'خطأ!',
                                text: 'فشل في حفظ التعديلات',
                                icon: 'error',
                                confirmButtonText: 'موافق'
                            });
                        }
                    })
                    .catch(error => {
                        Swal.fire({
                            title: 'خطأ!',
                            text: 'حدث خطأ أثناء الحفظ: ' + error,
                            icon: 'error',
                            confirmButtonText: 'موافق'
                        });
                    });
                }
            });
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}