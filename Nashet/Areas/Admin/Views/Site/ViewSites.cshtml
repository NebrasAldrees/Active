<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
@model IEnumerable<SiteViewModel>
<section class="page_wrap">
    <div class="page_content">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-3">
                <h5 class="m-0">جهات الجامعة</h5>
                <div class="d-flex gap-2">
                    <div class="form-group">
                        <input type="text" class="form-control table__quick_search"
                               placeholder="البحث السريع ...">
                    </div>
                    <a asp-action="InsertSite" class="btn btn-primary">إضافة جهة</a>
                </div>
            </div>
            <div class="block-body">
                <table class="table table-hover js-dataTable">
                    <thead>
                        <tr>
                            <th>رمز الجهة</th>
                            <th>اسم الجهة باللغة العربية</th>
                            <th class=""></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">لا توجد جهات لعرضها حالياً</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr class="cursor-pointer" goto="order_details.cshtml">
                                    <td>@item.SiteCode</td>
                                    <td>@item.SiteNameAR</td>
                                    <td class="action_td text-end">
                                        <a asp-action="ViewSiteByGUID" asp-route-id="@item.Guid" class="btn btn-sm btn-primary" data-bs-toggle="modal"
                                           data-bs-target="#view_section_@item.Guid">عرض</a>
                                        <!-- View Section Modal -->
                                        <div class="modal fade" id="view_section_@item.Guid" tabindex="-1"
                                             aria-labelledby="view_sectionLabel_@item.Guid" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                                                <div class="modal-content">
                                                    <div class="modal-header" bg-primary text-white style="background-color: #186F70; color: white;">
                                                        <h5 class="modal-title" id="view_sectionLabel">عرض بيانات الجهة</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                                aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body text-center">
                                                        <div class="row justify-content-center">
                                                                <div class="col-md-6">
                                                                <label asp-for="@item.SiteNameAR" class="card-title text-muted"></label>
                                                                <p class="card-text fw-bold">@item.SiteNameAR</p>
                                                                </div>
                                                        </div>
                                                        <div class="row justify-content-center">
                                                                <div class="col-md-6">
                                                                <label asp-for="@item.SiteNameEn" class="card-title text-muted"></label>
                                                                <p class="card-text fw-bold justify-content-center">@item.SiteNameEn</p>
                                                                </div>
                                                        </div>
                                                        <div class="row justify-content-center">
                                                                <div class="col-md-6">
                                                                <label asp-for="@item.SiteCode" class="card-title text-muted"></label>
                                                                <p class="card-text fw-bold">@item.SiteCode</p>
                                                                </div>
                                                        </div>
                                                        <div class="row justify-content-center">
                                                                <div class="col-md-6">
                                                                <button type="button" class="btn btn-secondary " 
                                                                            data-bs-dismiss="modal">
                                                                        إلغاء
                                                                    </button>
                                                                </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <a asp-action="UpdateSite" asp-route-guid="@item.Guid" class="btn btn-sm btn-success">تعديل</a>
                                        <a data-id="@item.Guid" class="btn btn-sm btn-danger delete-btn">حذف </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>



    </div>
</section><!-- End Page Wrap -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            // Attach event listener for delete buttons
            $('.delete-btn').on('click', function (event) {
                event.preventDefault();

                // Get the GUID from the clicked delete button
                var id = $(this).data('id');

                // Trigger SweetAlert2 for confirmation
                Swal.fire({
                    title: "هل أنت متأكد؟",
                    text: "سيتم حذف الجهة ولا يمكن التراجع عن هذا الإجراء!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "نعم، احذف الجهة",
                    cancelButtonText: "إلغاء"
                }).then((result) => {
                    if (result.isConfirmed) {

                        $.ajax({
                            url: '@Url.Action("DeleteSite", "Site")',
                            type: 'POST',
                            data: { guid: id },
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire({
                                        title: 'تم الحذف!',
                                        text: response.message || 'تم حذف الجهة بنجاح',
                                        icon: 'success',
                                        confirmButtonText: 'موافق',
                                        timer: 2000
                                    }).then(() => {
                                        window.location.href = '@Url.Action("ViewSites", "Site", new { area = "Admin" })';
                                    });
                                } else {
                                    Swal.fire({
                                        title: 'فشل الحذف!',
                                        text: response.message || 'لم يتم حذف الجهة',
                                        icon: 'error',
                                        confirmButtonText: 'موافق'
                                    });
                                }
                            },
                            error: function (xhr, status, error) {
                                console.error('Error:', error);
                                Swal.fire({
                                    title: 'خطأ!',
                                    text: 'حدث خطأ أثناء محاولة الحذف: ' + error,
                                    icon: 'error',
                                    confirmButtonText: 'موافق'
                                });
                            }
                        });
                    }
                });
            });
        });
    </script>
}