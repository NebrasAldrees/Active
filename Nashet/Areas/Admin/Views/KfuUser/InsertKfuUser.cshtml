@model KfuUserViewModel
<section class="page_wrap">
    <div class="page_content">

        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة مستخدم</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="InsertKfuUser" method="post">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="Username" for="" class="mb-1"></label>
                                    <input asp-for="Username" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="Username"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <!-- START ITEM -->
                                    <label for="" class="mb-1">البريد الإلكتروني</label>
                                    <input asp-for="UserEmail" type="email" class="form-control">
                                    <span style="color:red" asp-validation-for="UserEmail"></span>

                                </div><!-- END ITEM -->
                            </div>
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1"> الاسم بالعربي</label>
                                    <input asp-for="NameAR" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="NameAR"></span>

                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <!-- START ITEM -->
                                    <label for="" class="mb-1">الاسم بالانجليزي</label>
                                    <input asp-for="NameEN" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="NameEN"></span>

                                </div><!-- END ITEM -->
                            </div>
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1"> كلمة المرور</label>
                                    <input asp-for="Password" type="password" class="form-control">
                                    <span style="color:red" asp-validation-for="Password"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <!-- START ITEM -->
                                    <label for="" class="mb-1">رقم الجوال </label>
                                    <input asp-for="UserPhone" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="UserPhone"></span>
                                </div><!-- END ITEM -->
                            </div>
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1"> نوع المستخدم</label>
                                    <select asp-for="UserType" class="form-control">
                                        <option value="4">طالب</option>
                                        <option value="5">مشرف الأنشطة</option>
                                        <option value="6">مشرف النادي</option>
                                        <option value="7">مدير النادي</option>
                                        <option value="8">قائد النادي</option>
                                    </select>
                                    <span style="color:red" asp-validation-for="UserType"></span>
                                </div><!-- END ITEM -->
                            </div>

                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->