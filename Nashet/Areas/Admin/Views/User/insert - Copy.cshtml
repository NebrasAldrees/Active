@model UserViewModel
<section class="page_wrap">
    <div class="page_content">

        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة مستخدم</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="Insert">
                            <div class="row">
                              
                            </div>
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1"> الاسم بالعربي</label>
                                    <input asp-for="UserNameAR" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="UserNameAR"></span>

                                </div><!-- END ITEM -->

                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <!-- START ITEM -->
                                    <label for="" class="mb-1">الاسم بالانجليزي</label>
                                    <input asp-for="UserNameEN" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="UserNameEN"></span>

                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <!-- START ITEM -->
                                    <label for="" class="mb-1">البريد الإلكتروني</label>
                                    <input asp-for="UserEmail" type="email" class="form-control">
                                    <span style="color:red" asp-validation-for="UserEmail"></span>

                                </div><!-- END ITEM -->
                            </div>
                            <div class="row">
                          
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <!-- START ITEM -->
                                    <label for="" class="mb-1">رقم الجوال </label>
                                    <input asp-for="UserPhone" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="UserPhone"></span>
                                </div><!-- END ITEM -->
                            </div>
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1"> الجهة </label>
                                    <select asp-for="Site" class="form-control">
                                        <option value="1">كلية علوم الحاسب</option>
                                        <option value="2">عمادة شؤون الطلاب</option>
                                        <option value="3">كلية إدارة الأعمال</option>
                                    </select>

                                    <span style="color:red" asp-validation-for="Site"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1"> الدور  الوظيفي </label>
                                    <select asp-for="SystemRole" class="form-control">
                                        <option value="1">Student</option>
                                        <option value="2">Faculity</option>
                                        <option value="3">Stuff</option>
                                    </select>

                                    <span style="color:red" asp-validation-for="SystemRole"></span>
                                </div><!-- END ITEM -->
                            </div>

                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->