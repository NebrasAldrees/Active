@model IEnumerable<StudentViewModel>
<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-3">
                <h5 class="m-0">الطلاب</h5>
                <div class="d-flex gap-2">
                    <div class="form-group">
                        <input type="text" class="form-control table__quick_search"
                               placeholder="البحث السريع ...">
                    </div>
                    <a asp-action="InsertStudent" asp-controller="Student" asp-area="Admin" class="btn btn-primary">إضافة طالب</a>
                </div>
            </div>
            <div class="block-body">
                <table class="table table-hover js-dataTable">
                    <thead>
                        <tr>
                            <th>اسم الطالب باللغة العربية</th>
                            <th>اسم الطالب باللغة الإنجليزية</th>
                            <th class=""></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr class="cursor-pointer" goto="order_details.cshtml">
                                    <td>@item.StudentNameAr</td>
                                    <td>@item.StudentNameEn</td>
                                    <td>@item.StudentEmail</td>
                                    <td>@item.StudentPhone</td>
                                    <td>@item.StudentSkills</td>
                                    <td class="action_td text-end">
                                        @*<a asp-action="ViewStudentByGuid" asp-route-Guid="@item.Guid"class="btn btn-sm btn-primary">عرض</a>*@
                                        <a asp-action="UpdateStudent"asp-route-Guid="@item.Guid" class="btn btn-sm btn-success">تعديل</a>
                                        <a asp-action="DeleteStudent" asp-route-Guid="@item.Guid" class="btn btn-sm btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>



    </div>
</section><!-- End Page Wrap -->