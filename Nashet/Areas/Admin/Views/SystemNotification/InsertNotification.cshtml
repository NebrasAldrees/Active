@model SystemNotificationViewModel

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة إشعار جديد</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="InsertNotification" asp-controller="SystemNotification" asp-area="Admin">
                            <div class="row">
                                <!-- التاريخ -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="date" class="mb-1"></label>
                                    <input asp-for="date" type="date" class="form-control" />
                                    <span style="color:red" asp-validation-for="date"></span>
                                </div>

                                <!-- الوقت -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Time" class="mb-1"></label>
                                    <input asp-for="Time" type="time" class="form-control" />
                                    <span style="color:red" asp-validation-for="Time"></span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mt-4">
                                <button type="submit" class="btn btn-primary px-5">حفظ</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
