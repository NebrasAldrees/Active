@model IEnumerable<SystemNotificationViewModel>

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-3 d-flex justify-content-between">
                <h5 class="m-0">قائمة الإشعارات</h5>
                <a asp-action="InsertNotification" asp-controller="SystemNotification" asp-area="Admin" class="btn btn-primary">
                    إضافة إشعار
                </a>
            </div>
            <div class="block-body">
                <table class="table table-hover js-dataTable">
                    <thead>
                        <tr>
                            <th>رقم الإشعار</th>
                            <th>التاريخ</th>
                            <th>الوقت</th>
                            <th class="text-end">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SystemNotificationId</td>
                                    <td>@item.date.ToString("yyyy-MM-dd")</td>
                                    <td>@item.Time.ToString("HH:mm")</td>
                                    <td class="action_td text-end">
                                        <a href="" class="btn btn-sm btn-primary">عرض</a>
                                        <a href="" class="btn btn-sm btn-success">تعديل</a>
                                        <a href="" class="btn btn-sm btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">لا يوجد إشعارات</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>

