@model ClubRoleViewModel
<section class="page_wrap">
    <div class="page_content">

        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة دور في النادي</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="InsertClubRole" method="post">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="RoleTypeAr" for="" class="mb-1"></label>
                                    <input asp-for="RoleTypeAr" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="RoleTypeAr"></span>
                                </div><!-- END ITEM -->
                            </div>
                            
                                
                             

                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->