@model EmailNotificationViewModel

<section class="page_wrap">
    <div class="page_content">

        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة بريد إلكتروني</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="InsertEmail">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="UserEmail" class="mb-1"></label>
                                    <input asp-for="UserEmail" type="email" class="form-control" placeholder="ادخل البريد الإلكتروني">
                                    <span style="color:red" asp-validation-for="UserEmail"></span>
                                </div><!-- END ITEM -->
                            </div>

                            <div class="d-flex justify-content-end mt-4">
                                <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->
