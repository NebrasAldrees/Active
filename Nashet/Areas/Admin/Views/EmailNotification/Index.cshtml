@model IEnumerable<EmailNotificationViewModel>

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-3">
                <h5 class="m-0">قائمة البريد الإلكتروني</h5>
                <div class="d-flex gap-2">
                    <div class="form-group">
                        <input type="text" class="form-control table__quick_search"
                               placeholder="البحث السريع ...">
                    </div>
                    <a asp-action="InsertEmail" asp-controller="EmailNotification" asp-area="Admin" class="btn btn-primary">إضافة بريد جديد</a>
                </div>
            </div>
            <div class="block-body">
                <table class="table table-hover js-dataTable">
                    <thead>
                        <tr>
                            <th>رقم</th>
                            <th>البريد الإلكتروني</th>
                            <th class="text-end">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.EmailNotificationsId</td>
                                    <td>@item.UserEmail</td>
                                    <td class="action_td text-end">
                                        <a href="" class="btn btn-sm btn-primary">عرض</a>
                                        <a href="" class="btn btn-sm btn-success">تعديل</a>
                                        <a href="" class="btn btn-sm btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">لا يوجد بيانات</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
