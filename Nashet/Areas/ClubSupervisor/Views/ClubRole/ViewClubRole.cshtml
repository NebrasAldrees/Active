@model IEnumerable<ClubRoleViewModel>
<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-3">
                <h5 class="m-0">نوع العضوية</h5>
                <div class="d-flex gap-2">
                    <div class="form-group">
                        <input type="text" class="form-control table__quick_search"
                               placeholder="البحث السريع ...">
                    </div>
                    <a asp-action="InsertClubRole" asp-controller="ClubRole" asp-area="ClubSupervisor" class="btn btn-primary">إضافة نوع عضوية</a>
                </div>
            </div>
            <div class="block-body">
                <table class="table table-hover js-dataTable">
                    <thead>
                        <tr>
                            <th>نوع العضوية باللغة العربية</th>
                            <th>نوع العضوية باللغة الإنجليزية</th>
                            <th class=""></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">لا توجد اصناف عضويات لعرضها حالياً</td>
                            </tr>
                        }
                        else
                        {
                        
                            foreach (var item in Model)
                            {
                                <tr class="cursor-pointer" goto="order_details">
                                    <td>@item.RoleTypeAr</td>
                                    <td>@item.RoleTypeEn</td>
                                    <td class="action_td text-end">
                                        <a asp-action="UpdateClubRole" asp-route-guid="@item.Guid" class="btn btn-sm btn-success">تعديل</a>
                                        <a asp-action="DeleteClubRole" asp-route-Guid="@item.Guid" class="btn btn-sm btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>



    </div>
</section><!-- End Page Wrap -->