@model TeamViewModel
<section class="page_wrap">
    <div class="page_content">
        <!-- START ALERT MESSAGES -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }
        @if (TempData["Duplicate"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Duplicate"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-info-circle me-2"></i> @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <!-- END ALERT MESSAGES -->
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة جهة</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="InsertTeam" asp-controller="Team" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1"> النادي </label>
                                    <select asp-for="ClubGuid" class="form-control">
                                        <option value=""> اختر النادي</option>
                                        @foreach (ClubViewModel club in ViewBag.Club)
                                        {
                                            <option value="@club.Guid">@club.ClubNameAR</option>
                                        }
                                    </select>
                                    <span style="color:red" asp-validation-for="ClubGuid"></span>
                                </div><!-- END ITEM -->
                            </div>
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="TeamNameAR" class="mb-1"></label>
                                    <input asp-for="TeamNameAR" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="TeamNameAR"></span>
                                </div><!-- END ITEM -->

                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="TeamNameEn" class="mb-1"></label>
                                    <input asp-for="TeamNameEn" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="TeamNameEn"></span>
                                </div><!-- END ITEM -->

                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->