@using Nashet.Business.ViewModels
@model ReportViewModel

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة تقرير جديد</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="InsertReport" method="post" enctype="multipart/form-data" id="reportForm">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1">اسم النادي</label>
                                    <input type="text" class="form-control" value="@ViewBag.ClubName" readonly />
                                    <input type="hidden" asp-for="ClubGuid" value="@ViewBag.ClubGuid" />
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1">الرقم المرجعي للنادي</label>
                                    <input type="text" class="form-control" value="@ViewBag.ClubGuid" readonly />
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-12">
                                    <label for="" class="mb-1">عنوان التقرير</label>
                                    <input asp-for="Topic" type="text" class="form-control" placeholder="أدخل عنوان التقرير">
                                    <span style="color:red" asp-validation-for="Topic"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-12">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">إرفاق ملف التقرير</label>
                                        <input type="file" id="FileUpload" name="File" accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png" class="form-control">
                                        <small class="text-muted">الأنواع المسموحة: PDF, Word, Excel, Images - الحجم الأقصى: 10MB</small>
                                    </div>
                                </div><!-- END ITEM -->
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // عرض معاينة الملف قبل الرفع
        document.getElementById('FileUpload').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // التحقق من حجم الملف (10MB كحد أقصى)
                if (file.size > 10 * 1024 * 1024) {
                    alert('حجم الملف كبير جداً. الحد الأقصى المسموح به هو 10MB');
                    e.target.value = '';
                    return;
                }

                // التحقق من نوع الملف
                const allowedTypes = [
                    'application/pdf',
                    'application/msword',
                    'application/vnd.openxmlformats-officedocument.wordprocessingml.document',
                    'application/vnd.ms-excel',
                    'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet',
                    'image/jpeg',
                    'image/png',
                    'image/jpg'
                ];

                if (!allowedTypes.includes(file.type)) {
                    alert('نوع الملف غير مسموح. الرجاء اختيار ملف من الأنواع المسموحة (PDF, Word, Excel, Images)');
                    e.target.value = '';
                    return;
                }

                // عرض معاينة الملف
                const reader = new FileReader();
                reader.onload = function(e) {
                    const oldPreview = document.getElementById('filePreview');
                    if (oldPreview) {
                        oldPreview.remove();
                    }

                    const preview = document.createElement('div');
                    preview.id = 'filePreview';
                    preview.innerHTML = `
                        <div class="mt-3 p-3 border rounded">
                            <h6>معاينة الملف:</h6>
                            <div class="d-flex align-items-center gap-3">
                                <i class="fas fa-file-pdf fs-2 text-danger"></i>
                                <div>
                                    <div class="fw-bold">${file.name}</div>
                                    <div class="text-muted small">${formatFileSize(file.size)}</div>
                                </div>
                            </div>
                        </div>
                    `;
                    document.querySelector('.mb-4').after(preview);
                }
                reader.readAsDataURL(file);
            }
        });

        // دالة لتنسيق حجم الملف
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // SweetAlert للإضافة الناجحة فقط
        @if (ViewBag.Successful != null)
        {
                <text>
                Swal.fire({
                    title: "تم إضافة التقرير بنجاح!",
                    icon: "success",
                    draggable: true
                }).then(() => {
                    window.location.href = '@Url.Action("Index", "Report", new { area = "ClubSupervisor" })';
                });
                </text>
        }
        @if (ViewBag.Duplicate != null)
        {
                <text>
                Swal.fire({
                    title: "عنوان التقرير موجود مسبقاً!",
                    text: "لا يمكن إضافة تقرير بنفس العنوان",
                    icon: "warning",
                    confirmButtonText: "موافق",
                    draggable: true
                });
                </text>
        }
        @if (ViewBag.Error != null)
        {
                <text>
                Swal.fire({
                    title: "فشل إضافة التقرير",
                    text: "فشل إضافة التقرير",
                    icon: "warning",
                    confirmButtonText: "موافق",
                    draggable: true
                });
                </text>
        }
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}