@model ReportViewModel
@{
    ViewData["Title"] = "إضافة تقرير جديد";
}

<section class="page_wrap">
    <div class="page_content">

        <!-- START ALERT MESSAGES -->
        @if (TempData["Successful"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["Successful"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Failed"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-times-circle me-2"></i> @TempData["Failed"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-info-circle me-2"></i> @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <!-- END ALERT MESSAGES -->

        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة تقرير جديد</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <!-- إضافة enctype="multipart/form-data" -->
                        <form asp-action="InsertReport" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label class="mb-1">النادي</label>
                                    <select asp-for="ClubId" class="form-control" required>
                                        <option value="">اختر النادي</option>
                                        <!-- يمكنك إضافة الأندية من ViewBag -->
                                        @if (ViewBag.Clubs != null)
                                        {
                                            foreach (var club in ViewBag.Clubs)
                                            {
                                                <option value="@club.ClubId">@club.ClubNameAR</option>
                                            }
                                        }
                                    </select>
                                    <span style="color:red" asp-validation-for="ClubId"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label class="mb-1">عنوان التقرير</label>
                                    <input asp-for="Topic" type="text" class="form-control" placeholder="أدخل عنوان التقرير">
                                    <span style="color:red" asp-validation-for="Topic"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-12">
                                    <div class="mb-4">
                                        <label class="mb-1">رفع ملف التقرير</label>
                                        <input type="file" id="ReportFile" name="ReportFile" accept=".pdf,.doc,.docx,.xls,.xlsx,.txt" class="form-control" required>
                                        <small class="text-muted">الأنواع المسموحة: PDF, Word, Excel, Text - الحجم الأقصى: 10MB</small>
                                    </div>
                                </div><!-- END ITEM -->
                            </div>

                            <div class="d-flex justify-content-end mt-4">
                                <button type="submit" class="btn btn-primary px-5">
                                    <i class="fas fa-upload me-2"></i>رفع التقرير
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // التحقق من الملف قبل الرفع
        document.getElementById('ReportFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // التحقق من حجم الملف (10MB كحد أقصى)
                if (file.size > 10 * 1024 * 1024) {
                    alert('حجم الملف كبير جداً. الحد الأقصى المسموح به هو 10MB');
                    e.target.value = '';
                    return;
                }

                // التحقق من نوع الملف
                const allowedExtensions = ['.pdf', '.doc', '.docx', '.xls', '.xlsx', '.txt'];
                const fileExtension = file.name.toLowerCase().substring(file.name.lastIndexOf('.'));

                if (!allowedExtensions.includes(fileExtension)) {
                    alert('نوع الملف غير مسموح. الرجاء اختيار ملف PDF, Word, Excel, أو Text');
                    e.target.value = '';
                    return;
                }

                // عرض معلومات الملف
                const fileSize = file.size < 1024 ?
                    file.size + ' بايت' :
                    (file.size / 1024).toFixed(2) + ' كيلوبايت';

                // إزالة المعلومات القديمة إذا كانت موجودة
                const oldInfo = document.getElementById('fileInfo');
                if (oldInfo) {
                    oldInfo.remove();
                }

                // إنشاء معلومات جديدة
                const fileInfo = document.createElement('div');
                fileInfo.id = 'fileInfo';
                fileInfo.className = 'alert alert-info mt-3';
                fileInfo.innerHTML = `
                    <strong>معلومات الملف:</strong><br>
                    - الإسم: ${file.name}<br>
                    - الحجم: ${fileSize}<br>
                    - النوع: ${fileExtension.toUpperCase()}
                `;
                document.querySelector('.mb-4').after(fileInfo);
            }
        });

        // التحقق من النموذج قبل الإرسال
        document.querySelector('form').addEventListener('submit', function(e) {
            const fileInput = document.getElementById('ReportFile');
            if (!fileInput.files[0]) {
                e.preventDefault();
                alert('الرجاء اختيار ملف للتقرير');
                return false;
            }
        });
    </script>
}
