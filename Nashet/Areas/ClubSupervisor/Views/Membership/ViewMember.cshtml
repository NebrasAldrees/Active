@model IEnumerable<MembershipViewModel>
<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-3">
                <h5 class="m-0">أعضاء النادي</h5>
                <div class="d-flex gap-2">
                    <div class="form-group">
                        <input type="text" class="form-control table__quick_search"
                               placeholder="البحث السريع ...">
                    </div>
                    <a asp-action="InsertMember" asp-controller="Membership" asp-area="ClubSupervisor" class="btn btn-primary">إضافة عضو</a>
                </div>
            </div>
            <div class="block-body">
                <table class="table table-hover js-dataTable">
                    <thead>
                        <tr>
                            <th>اسم الفريق</th>
                            <th>اسم العضو</th>
                            <th>المنصب</th>
                            <th class=""></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">لا توجد بيانات اعضاء لعرضها حالياً</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                var formId = $"deleteForm_{item.Guid}";
                                <tr>
                                    <td>@item.TeamNameAr</td>
                                    <td>@item.StudentNameAr</td>
                                    <td>@item.ClubRoleType</td>
                                    <td class="action_td text-end">
                                        <a asp-action="UpdateMembership" asp-route-guid="@item.Guid" class="btn btn-sm btn-success">تعديل</a>

                                        <form id="@formId" method="post" asp-action="DeleteMember" asp-controller="Membership" asp-area="ClubSupervisor" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="guid" value="@item.Guid" />
                                            <button type="button" class="btn btn-sm btn-danger delete-btn" data-form-id="@formId">إلغاء العضوية</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(function () {
            $('.delete-btn').on('click', function (event) {
                event.preventDefault();
                const formId = $(this).data('form-id');

                Swal.fire({
                    title: "هل أنت متأكد؟",
                    text: "سيتم إلغاء العضوية ولا يمكن التراجع عن هذا الإجراء!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "نعم، إلغاء العضوية",
                    cancelButtonText: "إلغاء"
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("DeleteMember", "Membership", new { area = "ClubSupervisor" })',
                            type: 'POST',
                            data: $('#' + formId).serialize(),
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire({
                                        title: 'تم إلغاء العضوية!',
                                        text: response.message || 'تم إلغاء العضوية بنجاح',
                                        icon: 'success',
                                        confirmButtonText: 'موافق',
                                        timer: 2000
                                    }).then(() => {
                                        window.location.href = '@Url.Action("ViewMember", "Membership", new { area = "ClubSupervisor" })';
                                    });
                                } else {
                                    Swal.fire({
                                        title: 'فشل إلغاء العضوية!',
                                        text: response.message || 'لم يتم إلغاء العضوية',
                                        icon: 'error',
                                        confirmButtonText: 'موافق'
                                    });
                                }
                            },
                            error: function (xhr, status, error) {
                                Swal.fire({
                                    title: 'خطأ!',
                                    text: 'حدث خطأ أثناء محاولة إلغاء العضوية: ' + error,
                                    icon: 'error',
                                    confirmButtonText: 'موافق'
                                });
                            }
                        });
                    }
                });
            });
        });
    </script>
}