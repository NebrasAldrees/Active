@model MembershipViewModel

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة عضو</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">

                        <!-- معلومات الطالب -->
                        <form asp-action="SearchStudent" method="post" class="mb-4">
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label asp-for="AcademicId" class="mb-1">الرقم الأكاديمي</label>
                                    <input asp-for="AcademicId" type="text" class="form-control" />
                                    <span style="color:red" asp-validation-for="AcademicId"></span>
                                    <button type="hidden" class="btn btn-secondary mt-2"> بحث</button>
                                </div>

                                <div class="col-md-6 form-group">
                                    <label class="mb-1">اسم الطالب</label>
                                    <input asp-for="StudentNameAr" type="text" class="form-control" readonly />
                                    <input type="hidden" asp-for="StudentNameAr" />
                                </div>
                            </div>
                        </form>

                        <div id="membershipFormContainer" style="display:@(Model?.StudentId != null ? "block" : "none")">
                            <form asp-action="InsertMember" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <!-- الفريق -->
                                    <div class="col-md-6">
                                        <label class="mb-1">الفريق</label>
                                        <select asp-for="TeamGuid" class="form-control">
                                            <option value="">اختر الفريق</option>
                                            @foreach (TeamViewModel team in ViewBag.Team)
                                            {
                                                <option value="@team.Guid">@team.TeamNameAR</option>
                                            }
                                        </select>
                                        <span style="color:red" asp-validation-for="TeamGuid"></span>
                                    </div>

                                    <!-- المنصب -->
                                    <div class="col-md-6">
                                        <label class="mb-1">المنصب</label>
                                        <select asp-for="ClubRoleGuid" class="form-control">
                                            <option value="">اختر المنصب</option>
                                            @foreach (ClubRoleViewModel role in ViewBag.ClubRole)
                                            {
                                                <option value="@role.Guid">@role.RoleTypeAr</option>
                                            }
                                        </select>
                                        <span style="color:red" asp-validation-for="ClubRoleGuid"></span>
                                    </div>
                                </div>

                                <input type="hidden" asp-for="AcademicId" />
                                <input type="hidden" asp-for="StudentId" />
                                <input type="hidden" asp-for="StudentNameAr" />

                                <div class="d-flex justify-content-end mt-3">
                                    <button type="submit" class="btn btn-primary px-5"> إضافة</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            @if (ViewData["Error"] != null)
            {
                    <text>
                        Swal.fire({
                            title: 'خطأ في البحث!',
                            icon: 'error',
                            confirmButtonText: 'موافق'
                        });
                    </text>
            }

            @if (TempData["Success"] != null)
            {
                    <text>
                        Swal.fire({
                            title: 'تمت الإضافة!',
                            icon: 'success',
                            confirmButtonText: 'موافق'
                        });
                    </text>
            }

            @if (TempData["Failed"] != null)
            {
                    <text>
                        Swal.fire({
                            title: 'فشل في الإضافة!',
                            icon: 'error',
                            confirmButtonText: 'موافق'
                        });
                    </text>
            }

            @if (TempData["Error"] != null)
            {
                    <text>
                        Swal.fire({
                            title: 'خطأ!',
                            icon: 'error',
                            confirmButtonText: 'موافق'
                        });
                    </text>
            }

            @if (TempData["Duplicate"] != null)
            {
                    <text>
                        Swal.fire({
                            title: 'تنبيه!',
                            icon: 'warning',
                            confirmButtonText: 'موافق'
                        });
                    </text>
            }
        });
    </script>
}