@using Nashet.Business.ViewModels
@model IEnumerable<ActivityViewModel>
<section class="page_wrap">
    <div class="page_content">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-3">
                <h5 class="m-0">الأنشطة</h5>
                <div class="d-flex gap-2">
                    <div class="form-group">
                        <input type="text" class="form-control table__quick_search"
                               placeholder="البحث السريع ...">
                    </div>
                    <a asp-action="InsertActivity" asp-controller="Activity" asp-area="ActivitiesSupervisor" class="btn btn-primary">إضافة نشاط</a>
                </div>
            </div>
            <div class="block-body">
                <table class="table table-hover js-dataTable">
                    <thead>
                        <tr>
                            <th>الرقم المرجعي للنشاط</th>
                            <th>عنوان النشاط</th>
                            <th class=""></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr class="cursor-pointer" goto="order_details.html">
                                    <td>@item.ActivityId</td>
                                    <td>@item.ActivityTopic</td>
                                    <td class="action_td text-end">

                                        <a asp-action="ViewActivityByGuid" asp-route-id="@item.Guid" class="btn btn-sm btn-primary" data-bs-toggle="modal"
                                           data-bs-target="#view_section_@item.Guid">عرض</a>
                                        <!-- View Section Modal -->
                                        <div class="modal fade" id="view_section_@item.Guid" tabindex="-1"
                                             aria-labelledby="view_sectionLabel_@item.Guid" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                                                <div class="modal-content">
                                                    <div class="modal-header" bg-primary text-white style="background-color: #186F70; color: white;">
                                                        <h5 class="modal-title" id="view_sectionLabel">عرض تفاصيل الأنشطة</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                                aria-label="Close"></button>
                                                    </div>

                                                    <div class="modal-body text-center">
                                                        <div class="row justify-content-center">
                                                            <div class="col-md-6">
                                                                <label asp-for="@item.ActivityTopic" class="card-title text-muted"></label>
                                                                <p class="card-text fw-bold">@item.ActivityTopic</p>
                                                            </div>
                                                        </div>
                                                        <div class="row justify-content-center">
                                                            <div class="col-md-6">
                                                                <label asp-for="@item.ActivityDescription" class="card-title text-muted"></label>
                                                                <p class="card-text fw-bold">@item.ActivityDescription</p>
                                                            </div>
                                                        </div>
                                                        <div class="row justify-content-center">
                                                            <div class="col-md-6">
                                                                <label asp-for="@item.ActivityLocation" class="card-title text-muted"></label>
                                                                <p class="card-text fw-bold">@item.ActivityLocation</p>
                                                            </div>
                                                        </div>
                                                        <div class="row justify-content-center">
                                                            <div class="col-md-6 justify-content-center">
                                                                <label asp-for="@item.ActivityStartDate" class="card-title text-muted"> </label>
                                                                <p class="card-text fw-bold"> <i class="bi bi-calendar-event me-2"></i> @item.ActivityStartDate</p>
                                                            </div>
                                                            <div class="col-md-6">
                                                            </div>
                                                        </div>
                                                        <div class="row justify-content-center">
                                                            <div class="col-md-6">
                                                                <label asp-for="@item.ActivityEndDate" class="card-title text-muted"></label>
                                                                <p class="card-text fw-bold">@item.ActivityEndDate</p>
                                                            </div>
                                                        </div>
                                                        <div class="row justify-content-center">
                                                            <div class="col-md-6">
                                                                <button type="button" class="btn btn-secondary" 
                                                                        data-bs-dismiss="modal">
                                                                    إلغاء
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <a asp-action="UpdateActivity" asp-route-id="@item.Guid" class="btn btn-sm btn-success">تعديل</a>
                                        <a asp-action="DeleteActivity" asp-route-id="@item.Guid" class="btn btn-sm btn-danger"
                                           onclick="return confirm('هل أنت متأكد من حذف الجهة؟')">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</section><!-- End Page Wrap -->
<style>
    .card {
        min-height: 200px;
        position: relative;
        overflow: hidden;
    }

    .club-overlay {
        background-color: rgba(0, 0, 0, 0.5);
        transition: background-color 0.3s ease;
    }

    .club-name-title {
        font-weight: bold;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
    }

    .club-name-subtitle {
        font-size: 0.9em;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
    }

    .card:hover .club-overlay {
        background-color: rgba(0, 0, 0, 0.7);
    }

    /* تحسين شكل الزر في الفورم */
    .club-actions form {
        display: inline;
    }
</style>
