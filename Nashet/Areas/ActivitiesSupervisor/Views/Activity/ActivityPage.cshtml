@model ActivityViewModel
<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <!-- Header -->
            <div class="block-header border-bottom px-4 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="m-0">نشاط: @Model.ActivityTopic</h5>
                </div>
            </div>

            <!-- Content -->
            <div class="block-body p-4">
                @if (Model == null)
                {
                    <div class="alert alert-danger text-center">
                        ⚠️ لم يتم العثور على النشاط
                    </div>
                    <div class="text-center">
                        <a asp-action="Activities" class="btn btn-primary">العودة لقائمة الأنشطة</a>
                    </div>
                    return;
                }

                <div class="row">
                    <div class="col-lg-4 mb-4">
                        <div class="text-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.ActivityPoster))
                            {
                                <img src="@Model.ActivityPoster" alt="اعلان النشاط" class="rounded shadow"
                                     style="max-width: 100%; height: auto; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded shadow d-inline-flex align-items-center justify-content-center"
                                     style="max-width: 100%; height: auto;">
                                    <i class="fas fa-club fa-3x text-muted" onerror="this.onerror=null;this.src='https://placehold.co/80x80/f3f4f6/000000?text=POSTER';"></i>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-lg-8">
                        <!-- المعلومات الأساسية -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-header ">
                                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>معلومات النشاط</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <strong>موضوع النشاط</strong>
                                    <div class="text-muted">@(Model.ActivityTopic ?? "غير محدد")</div>
                                </div>
                                <div class="mb-3">
                                    <strong>موقع  النشاط</strong>
                                    <div class="text-muted">@Model.ActivityLocation</div>
                                </div>
                                <div class="mb-3">
                                    <strong>النادي التابع للنشاط</strong>
                                    <div class="text-muted">@(ViewBag.currentClub?.ClubNameAR ?? "غير محدد")</div>
                                </div>
                            </div>
                        </div>
                        <!-- تفاصيل النشاط-->
                        <div class="card shadow-sm mb-4">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-file-alt me-2"></i>تفاصيل النشاط</h6>
                            </div>
                            <div class="card-body">
                                <p class="text-muted" style="line-height: 1.8; text-align: justify;">
                                    @if (!string.IsNullOrEmpty(Model.ActivityDescription))
                                    {
                                        @Model.ActivityDescription
                                    }
                                    else
                                    {
                                        <span class="text-muted">تفاصيل النشاط غير متاحة</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="card shadow-sm mb-4">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-eye me-2"></i> وقت النشاط</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <strong>تاريخ بدء النشاط</strong>
                                    <div class="text-muted">@Model.ActivityStartDate</div>
                                </div>
                                <div class="mb-3">
                                    <strong>تاريخ انتهاء النشاط</strong>
                                    <div class="text-muted">@Model.ActivityEndDate</div>
                                </div>
                            </div>
                        </div>

                        <!-- أزرار التعديل والحذف -->
                        <div class="card shadow-sm mt-4">
                            <div class="card-body text-center">
                                <a asp-action="UpdateActivity" asp-route-guid="@Model.Guid" class="btn btn-sm btn-success">تعديل</a>
                                <a data-id="@Model.Guid" class="btn btn-sm btn-danger delete-btn">حذف</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            // Attach event listener for delete buttons
            $('.delete-btn').on('click', function (event) {
                event.preventDefault();

                // Get the GUID from the clicked delete button
                var id = $(this).data('id');

                // Trigger SweetAlert2 for confirmation
                Swal.fire({
                    title: "هل أنت متأكد؟",
                    text: "سيتم حذف النشاط ولا يمكن التراجع عن هذا الإجراء!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "نعم، احذف النشاط",
                    cancelButtonText: "إلغاء"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Proceed with the AJAX request to delete the activity
                        $.ajax({
                            url: '@Url.Action("DeleteActivity", "Activity")',
                            type: 'POST',
                            data: { guid: id },
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire({
                                        title: 'تم الحذف!',
                                        text: response.message || 'تم حذف النشاط بنجاح',
                                        icon: 'success',
                                        confirmButtonText: 'موافق',
                                        timer: 2000
                                    }).then(() => {
                                        // التوجيه إلى صفحة الأنشطة بعد الحذف
                                        window.location.href = '@Url.Action("Activities", "Activity", new { area = "ActivitiesSupervisor" })';
                                    });
                                } else {
                                    Swal.fire({
                                        title: 'فشل الحذف!',
                                        text: response.message || 'لم يتم حذف النشاط',
                                        icon: 'error',
                                        confirmButtonText: 'موافق'
                                    });
                                }
                            },
                            error: function (xhr, status, error) {
                                console.error('Error:', error);
                                Swal.fire({
                                    title: 'خطأ!',
                                    text: 'حدث خطأ أثناء محاولة الحذف: ' + error,
                                    icon: 'error',
                                    confirmButtonText: 'موافق'
                                });
                            }
                        });
                    }
                });
            });
        });
    </script>
}