@model ActivityViewModel
<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <!-- Header -->
            <div class="block-header border-bottom px-4 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="m-0">نشاط: @Model.ActivityTopic</h5>
                </div>
            </div>

            <!-- Content -->
            <div class="block-body p-4">
                @if (Model == null)
                {
                    <div class="alert alert-danger text-center">
                        ⚠️ لم يتم العثور على النشاط
                    </div>
                    <div class="text-center">
                        <a asp-action="Activities" class="btn btn-primary">العودة لقائمة الأنشطة</a>
                    </div>
                    return;
                }

                <div class="row">
                    <div class="col-lg-4 mb-4">
                        <!-- poster -->
                        <div class="text-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.ActivityPoster))
                            {
                                <img src="@Model.ActivityPoster" alt="اعلان النشاط" class="rounded shadow"
                                     style="width: 400px; height: 400px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded shadow d-inline-flex align-items-center justify-content-center"
                                     style="width: 400px; height: 400px;">
                                    <i class="fas fa-club fa-3x text-muted" onerror="this.onerror=null;this.src='https://placehold.co/80x80/f3f4f6/000000?text=POSTER';"></i>
                                </div>
                            }
                        </div>

                        
                    </div>

                    <div class="col-lg-8">
                        <!-- المعلومات الأساسية -->
                        <div class="card shadow-sm">
                            <div class="card-header ">
                                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>معلومات النشاط</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <strong>موضوع النشاط</strong>
                                    <div class="text-muted">@(Model.ActivityTopic ?? "غير محدد")</div>
                                </div>
                                <div class="mb-3">
                                    <strong>موقع  النشاط</strong>
                                    <div class="text-muted">@Model.ActivityLocation</div>
                                </div>
                                <div class="mb-3">
                                    <strong>النادي التابع للنشاط</strong>
                                    <div class="text-muted">@(ViewBag.currentClub?.ClubNameAR ?? "غير محدد")</div>
                                </div>
                            </div>
                        </div>
                        <!-- تفاصيل النشاط-->
                        <div class="card shadow-sm mb-4">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-file-alt me-2"></i>تفاصيل النشاط</h6>
                            </div>
                            <div class="card-body">
                                <p class="text-muted" style="line-height: 1.8; text-align: justify;">
                                    @if (!string.IsNullOrEmpty(Model.ActivityDescription))
                                    {
                                        @Model.ActivityDescription
                                    }
                                    else
                                    {
                                        <span class="text-muted">تفاصيل النشاط غير متاحة</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="card shadow-sm mb-4">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-eye me-2"></i> وقت النشاط</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <strong>تاريخ بدء النشاط</strong>
                                    <div class="text-muted">@Model.ActivityStartDate</div>
                                </div>
                                <div class="mb-3">
                                    <strong>تاريخ انتهاء النشاط</strong>
                                    <div class="text-muted">@Model.ActivityEndDate</div>
                                </div> 
                            </div>
                        </div>

                        <div class="card shadow-sm mt-4">
                            <div class="card-body text-center">
                                <a asp-action="UpdateActivity" asp-route-guid="@Model.Guid" class="btn btn-sm btn-success">تعديل</a>
                                <a data-id="@Model.Guid" class="btn btn-sm btn-danger delete-btn">حذف</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
<script>
    $(document).ready(function () {

        // Attach event listener for delete buttons
        $('.delete-btn').on('click', function (event) {
            event.preventDefault();
            // Get the GUID from the clicked delete button
            var id = $(this).data('id');
            // Trigger SweetAlert2 for confirmation
            Swal.fire({
                title: "هل أنت متأكد؟",
                text: "",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "نعم، احذف!",
                cancelButtonText: "إلغاء"
            }).then((result) => {
                if (result.value) {
                    // Proceed with the AJAX request to delete the permission
                    $.ajax({
                        url: '@Url.Action("DeleteActivity")',
                        type: 'POST',
                        data: { guid: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: 'نجحت العملية!',
                                    text: 'تم الحذف',
                                    icon: 'success'
                                }).then(() => {
                                    window.location.href = @Url.Action("Activities", "Activity");
                                    });
                            } else {
                                Swal.fire({
                                    title: 'فشلت العملية!',
                                    text: 'لم يتم الحذف',
                                    icon: 'error'
                                });
                            }
                        },
                        error: function () {
                            Swal.fire({
                                title: 'خطأ!',
                                text: 'حدث خطأ غير متوقع.',
                                icon: 'error'
                            });
                        }
                    });
                }
            });
        });
    });
</script>
}
