@model AnnouncementViewModel
<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إنشاء إعلان جديد</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="InsertAnnouncement" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="ClubGuid" class="mb-1"></label>
                                    <select asp-for="ClubGuid" class="form-control">
                                        <option value="">-- اختر النادي --</option>
                                        @foreach (ClubViewModel club in ViewBag.Club)
                                        {
                                            <option value="@club.Guid">@club.ClubNameAR</option>
                                        }
                                    </select>
                                    <span style="color:red" asp-validation-for="ClubGuid"></span>

                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="AnnouncementType" class="mb-1">نوع الإعلان</label>
                                    <select asp-for="AnnouncementType" class="form-control">
                                        <option value="إعلان  نشاط">إعلان  نشاط</option>
                                        <option value="إنشاء نادي جديد">إنشاء نادي جديد</option>
                                    </select>
                                    <span style="color:red" asp-validation-for="AnnouncementType"></span>

                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1">موضوع الإعلان </label>
                                    <input asp-for="AnnouncementTopic" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="AnnouncementTopic"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1">تفاصيل الإعلان</label>
                                    <textarea asp-for="AnnouncementDetails" class="form-control"></textarea>
                                    <span style="color:red" asp-validation-for="AnnouncementDetails"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="AnnouncementImage" class="mb-1"></label>
                                    <input asp-for="AnnouncementImage" type="file" id="ImageUpload"
                                           name="AnnouncementImage" accept="image/*" class=" form-control">
                                    <small class="text-muted">الأنواع المسموحة: JPG,JPEG, PNG, PDF - الحجم الأقصى: 50MB</small>
                                    <span style="color:red" asp-validation-for="AnnouncementImage"></span>
                                </div><!-- END ITEM -->
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary px-5" title="save">إضافة</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->
@section Scripts {
    <script>
        // عرض معاينة الصورة قبل الرفع
        document.getElementById('ImageUpload').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // التحقق من حجم الملف (5MB كحد أقصى)
                if (file.size > 5 * 1024 * 1024) {
                    alert('حجم الملف كبير جداً. الحد الأقصى المسموح به هو 5MB');
                    e.target.value = '';
                    return;
                }

                // التحقق من نوع الملف
                const allowedTypes = ['image/jpeg', 'image/png', 'image/gif'];
                if (!allowedTypes.includes(file.type)) {
                    alert('نوع الملف غير مسموح. الرجاء اختيار صورة (JPG, PNG, GIF)');
                    e.target.value = '';
                    return;
                }

                // عرض معاينة الصورة
                const reader = new FileReader();
                reader.onload = function(e) {
                    // إزالة المعاينة القديمة إذا كانت موجودة
                    const oldPreview = document.getElementById('imagePreview');
                    if (oldPreview) {
                        oldPreview.remove();
                    }

                    // إنشاء معاينة جديدة
                    const preview = document.createElement('div');
                    preview.id = 'imagePreview';
                    preview.innerHTML = `
                        <div class="mt-3 p-3 border rounded">
                            <h6>معاينة الصورة:</h6>
                            <img src="${e.target.result}" class="img-fluid rounded" style="max-height: 200px;">
                        </div>
                    `;
                    document.querySelector('.mb-4').after(preview);
                }
                reader.readAsDataURL(file);
            }
        });
    </script>

}
