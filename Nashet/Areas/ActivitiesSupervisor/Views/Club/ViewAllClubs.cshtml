@model IEnumerable<ClubViewModel>
<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-3">
                <h5 class="m-0">الأندية الطلابية</h5>
                <div class="d-flex gap-2">
                    <div class="form-group">
                        <input type="text" class="form-control table__quick_search"
                               placeholder="البحث السريع ...">
                    </div>
                    <a asp-action="InsertClub" asp-controller="Club" asp-area="ActivitiesSupervisor" class="btn btn-primary">إضافة نادي</a>
                </div>
            </div>
            <div class="block-body">

                @if (ViewData["Error"] != null)
                {
                    <div class="alert alert-danger">@ViewData["Error"]</div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">@TempData["Message"]</div>
                }

                                    <!-- معلومات النادي -->
                                    <div class="mb-2">
                                        <strong>الاسم الإنجليزي:</strong>
                                        <p class="mb-1 text-muted">@item.ClubNameEN</p>
                                    </div>

                                    <div class="mb-2">
                                        <strong>الجهة:</strong>
                                        @{
                                            var sites = ViewBag.Sites as List<SiteViewModel>;
                                            var site = sites?.FirstOrDefault(s => s.SiteId == item.SiteId);
                                        }
                                        <p class="mb-1 text-muted">@(site.SiteNameAR)</p>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="action_td text-center">
                                        <a href="@Url.Action("ClubPage", "Club", new { area = "ActivitiesSupervisor", guid = item.Guid })"
                                           class="btn btn-sm btn-primary">عرض</a>
                                        <a asp-action="InsertClub" asp-controller="Club" asp-area="ActivitiesSupervisor"
                                           class="btn btn-sm btn-success">تعديل</a>

                                            @* زر الحذف مع تأكيد *@
                                            <form asp-action="DeleteClub" asp-controller="Club"
                                                  asp-area="ActivitiesSupervisor" method="post"
                                                  class="d-inline" onsubmit="return confirm('هل أنت متأكد من حذف النادي؟');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.ClubId" />
                                                <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<style>
    .card {
        min-height: 200px;
        position: relative;
        overflow: hidden;
    }

    .club-overlay {
        background-color: rgba(0, 0, 0, 0.5);
        transition: background-color 0.3s ease;
    }

    .club-name-title {
        font-weight: bold;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
    }

    .club-name-subtitle {
        font-size: 0.9em;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
    }

    .card:hover .club-overlay {
        background-color: rgba(0, 0, 0, 0.7);
    }

    /* تحسين شكل الزر في الفورم */
    .club-actions form {
        display: inline;
    }
</style>