@using Nashet.Business.ViewModels
@model IEnumerable<ClubViewModel>
<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-3">
                <h5 class="m-0">الأندية الطلابية</h5>
                <div class="d-flex gap-2">
                    <div class="form-group">
                        <input type="text" class="form-control" id="clubSearch"
                               placeholder="البحث السريع ...">
                    </div>
                    <a asp-action="InsertClub" asp-controller="Club" asp-area="ActivitiesSupervisor" class="btn btn-primary">إضافة نادي</a>
                </div>
            </div>
            <div class="block-body">
                <!-- بداية البطاقات -->
                <div class="row" id="clubsContainer">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4 club-card">
                            <div class="card h-100">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">@item.ClubNameAR</h6>
                                    <span class="badge bg-secondary">#@item.ClubId</span>
                                </div>
                                <div class="card-body">
                                    <!-- صورة الشعار -->
                                    <div class="text-center mb-3">
                                        @if (!string.IsNullOrEmpty(item.ClubIcon))
                                        {
                                            <img src="@item.ClubIcon" alt="شعار النادي"
                                                 style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;">
                                        }
                                        else
                                        {
                                            <div style="width: 80px; height: 80px; background: #f8f9fa; border-radius: 8px; display: inline-flex; align-items: center; justify-content: center;">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        }
                                    </div>

                                    <!-- معلومات النادي -->
                                    <div class="mb-2">
                                        <strong>الاسم الإنجليزي:</strong>
                                        <p class="mb-1 text-muted">@item.ClubNameEN</p>
                                    </div>

                                    <div class="mb-2">
                                        <strong>الجهة:</strong>
                                        @{
                                            var sites = ViewBag.Sites as List<SiteViewModel>;
                                            var site = sites?.FirstOrDefault(s => s.SiteId == item.SiteId);
                                        }
                                        <p class="mb-1 text-muted">@(site?.SiteNameAR ?? "غير محدد")</p> <!-- ✅ التعديل هنا -->
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="action_td text-center">
                                        <a href="@Url.Action("ClubPage", "Club", new { area = "ActivitiesSupervisor", guid = item.Guid })"
                                           class="btn btn-sm btn-primary">عرض</a>
                                        <a asp-action="InsertClub" asp-controller="Club" asp-area="ActivitiesSupervisor"
                                           class="btn btn-sm btn-success">تعديل</a>

                                        <form asp-action="DeleteClub" asp-controller="Club" asp-area="ActivitiesSupervisor" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.ClubId" />
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('هل أنت متأكد من حذف النادي؟')">
                                                حذف
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- نهاية البطاقات -->
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->
@section Scripts {
    <script>
        document.getElementById('clubSearch').addEventListener('input', function(e) {
            const searchText = e.target.value.toLowerCase().trim();
            const clubCards = document.querySelectorAll('.club-card');

            clubCards.forEach(card => {
                const cardText = card.textContent.toLowerCase();
                if (cardText.includes(searchText) || searchText === '') {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    </script>
}
