@using Nashet.Business.ViewModels
@model ClubViewModel
<section class="page_wrap">
    <div class="page_content">

        <!-- START ALERT MESSAGES -->
        @if (TempData["Successful"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["Successful"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Duplicate"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Duplicate"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Failed"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-times-circle me-2"></i> @TempData["Failed"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-info-circle me-2"></i> @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <!-- END ALERT MESSAGES -->

        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إنشاء نادي جديد</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <!-- إضافة enctype="multipart/form-data" -->
                        <form asp-action="InsertClub" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1"> اسم النادي باللغة العربية</label>
                                    <input asp-for="ClubNameAR" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="ClubNameAR"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1">اسم النادي باللغة الإنجليزية </label>
                                    <input asp-for="ClubNameEN" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="ClubNameEN"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label asp-for="SiteId" class="mb-1">الجهة</label>
                                    <select asp-for="Site.Guid" class="form-control">
                                        <option value="">-- اختر الجهة --</option>
                                        @foreach (SiteViewModel site in ViewBag.Site)
                                        {
                                            <option value="@site.Guid">@site.SiteNameAR</option>
                                        }
                                    </select>
                                    <span style="color:red" asp-validation-for="SiteId"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1">الرؤية</label>
                                    <textarea asp-for="ClubVision" class="form-control"></textarea>
                                    <span style="color:red" asp-validation-for="ClubVision"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <label for="" class="mb-1">نبذة عن النادي</label>
                                    <textarea asp-for="ClubOverview" class="form-control"></textarea>
                                    <span style="color:red" asp-validation-for="ClubOverview"></span>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">إرفاق صورة لشعار النادي</label>
                                        <!-- تغيير name إلى ClubIcon وتعديل الـ input -->
                                        <input type="file" id="ImageUpload" name="ClubIcon" accept="image/*" class="form-control">
                                        <small class="text-muted">الأنواع المسموحة: JPG, PNG, GIF - الحجم الأقصى: 5MB</small>
                                    </div>
                                </div><!-- END ITEM -->
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->
@section Scripts {
    <script>
        // عرض معاينة الصورة قبل الرفع
        document.getElementById('ImageUpload').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // التحقق من حجم الملف (5MB كحد أقصى)
                if (file.size > 5 * 1024 * 1024) {
                    alert('حجم الملف كبير جداً. الحد الأقصى المسموح به هو 5MB');
                    e.target.value = '';
                    return;
                }

                // التحقق من نوع الملف
                const allowedTypes = ['image/jpeg', 'image/png', 'image/gif'];
                if (!allowedTypes.includes(file.type)) {
                    alert('نوع الملف غير مسموح. الرجاء اختيار صورة (JPG, PNG, GIF)');
                    e.target.value = '';
                    return;
                }

                // عرض معاينة الصورة
                const reader = new FileReader();
                reader.onload = function(e) {
                    // إزالة المعاينة القديمة إذا كانت موجودة
                    const oldPreview = document.getElementById('imagePreview');
                    if (oldPreview) {
                        oldPreview.remove();
                    }

                    // إنشاء معاينة جديدة
                    const preview = document.createElement('div');
                    preview.id = 'imagePreview';
                    preview.innerHTML = `
                        <div class="mt-3 p-3 border rounded">
                            <h6>معاينة الصورة:</h6>
                            <img src="${e.target.result}" class="img-fluid rounded" style="max-height: 200px;">
                        </div>
                    `;
                    document.querySelector('.mb-4').after(preview);
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}