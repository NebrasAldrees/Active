@model tblClub
<section class="page_wrap">
    <div class="page_content">

        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة نادي</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form action="">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">اسم النادي باللغة العربية</label>
                                        <input asp-for="ClubNameAR" type="text" placeholder="اسم النادي باللغة العربية" class="form-control">
                                    </div>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">اسم النادي باللغة الأنجليزية</label>
                                        <input asp-for="ClubNameEN" type="text" placeholder="اسم النادي باللغة الأنجليزية" class="form-control">
                                    </div>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">الجهة التابعة للنادي</label>
                                        
                                    </div>
                                    <select asp-for="siteId" id="Sites" name="Sites">
                                        <option value="ccsit" selected>كلية علوم الحاسب وتقنية المعلومات</option>
                                        <option value="Engineering">كلية الهندسة</option>
                                        <option value="Business">كلية الإدارة</option>
                                        <option value="students">عمادة شؤون الطلاب</option>
                                    </select>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">البريد الإلكتروني الخاص بمشرف النادي</label>
                                        <input type="email" placeholder="name@kfu.edu.sa"
                                               class="form-control text-start">
                                    </div>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-12">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">تفاصيل النادي</label>
                                        <textarea asp-for="ClubVision" name="" class="form-control" placeholder="رؤية النادي"
                                                  rows="3" id=""></textarea>
                                    </div>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">شعار النادي</label>
                                        <input asp-for="ClubIcon" type="file" id="ClubIcon" name="ClubIcon" accept="image/* placeholder="شعار النادي" class="form-control">
                                    </div>
                                </div><!-- END ITEM -->
                                
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->