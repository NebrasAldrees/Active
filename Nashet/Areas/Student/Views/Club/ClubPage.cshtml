@model ClubViewModel
<section class="page_wrap" style="background:linear-gradient(135deg,#f8f9fa,#ffffff);padding:40px 0;display:flex;justify-content:center;">
    <div class="page_content" style="max-width:900px;width:100%;">
        <div class="block mb-4" style="border-radius:12px;overflow:hidden;box-shadow:0 6px 18px rgba(0,0,0,0.1);">
            <div class="block-header px-4 py-4"
                 style="background:linear-gradient(to right,#3fa7b6, #0f7179);color:#fff;border-radius:10px 10px 0 0;">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="m-0" style="font-weight:600;letter-spacing:0.5px;">
                        تفاصيل النادي: @Model.ClubNameAR
                    </h5>
                </div>
            </div>
            <div class="block-body py-5" style="background:linear-gradient(135deg,#eee,#ffffff);">
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <div class="card shadow-sm" style="border:none;border-radius:12px;">
                            <div class="card-body" style="background:#ffffff;border-radius:12px;">
                                <!-- Club Icon -->
                                @if (!string.IsNullOrEmpty(Model.ClubIcon))
                                {
                                    <div class="text-center mb-4">
                                        <img src="@Model.ClubIcon" alt="@Model.ClubNameAR"
                                             style="max-height:200px;border-radius:16px;background:#f1f3ff;">
                                    </div>
                                }

                                <!-- Club Details -->
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <h6 class="text-primary" style="font-weight:600;color:#0d6efd;">
                                            اسم النادي بالعربية:
                                        </h6>
                                        <p class="text-muted fs-6" style="line-height:1.7;">@Model.ClubNameAR</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <h6 class="text-primary" style="font-weight:600;color:#0d6efd;">
                                            اسم النادي بالإنجليزية:
                                        </h6>
                                        <p class="text-muted fs-6" style="line-height:1.7;">@Model.ClubNameEN</p>
                                    </div>
                                </div>

                                <div class="row mt-3">
                                    <div class="col-12 mb-3">
                                        <h6 class="text-primary" style="font-weight:600;color:#0d6efd;">
                                            الرؤية:
                                        </h6>
                                        <p class="text-muted fs-6" style="line-height:1.7;">
                                            @(string.IsNullOrEmpty(Model.ClubVision) ? "لا توجد رؤية محددة" : Model.ClubVision)
                                        </p>
                                    </div>
                                </div>

                                <div class="row mt-3">
                                    <div class="col-12">
                                        <h6 class="text-primary" style="font-weight:600;color:#0d6efd;">
                                            نبذة عن النادي:
                                        </h6>
                                        <p class="text-muted fs-6" style="line-height:1.7;">
                                            @(string.IsNullOrEmpty(Model.ClubOverview) ? "لا توجد نبذة عن النادي" : Model.ClubOverview)
                                        </p>

                                    </div>
                                </div>
                                <div class="row mt-3" >
                                    <!-- الفرق التابعة للنادي -->

                                    <h6 class="text-primary" style="font-weight:600;color:#0d6efd;">
                                    الأفرقة التابعة للنادي</h6>
                                    @if (ViewBag.Teams != null && ((IList<TeamViewModel>)ViewBag.Teams).Any())
                                    {
                                        <div class="row">
                                            @foreach (var team in (IList<TeamViewModel>)ViewBag.Teams)
                                            {
                                                <div class="col-md-6 col-lg-4 mb-4">
                                                    <div class="card h-100 shadow-sm" style="border-radius:12px;">
                                                        <div class="card-header text-center" style="background:#0f7179;color:#fff;border-radius:12px 12px 0 0;">
                                                            <h6 class="mb-0">@team.TeamNameAR</h6>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">لا توجد فرق مسجلة لهذا النادي.</p>
                                    }
                                </div>
                            </div> <!-- card-body -->
                        </div> <!-- card -->
                    </div>
                </div>
            </div> <!-- block-body -->
        </div>
    </div>
</section>
