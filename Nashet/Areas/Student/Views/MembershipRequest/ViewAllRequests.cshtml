@model List<tblMembershipRequest>
@{
    ViewData["Title"] = "طلبات العضوية";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="m-0">طلبات العضوية</h5>
                </div>
            </div>
            <div class="block-body">
                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>
                        لا توجد طلبات عضوية مرفوعة
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>النادي</th>
                                    <th>الحالة</th>
                                    <th>تاريخ الطلب</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;
                                    foreach (var request in Model)
                                    {
                                        <tr>
                                            <td>@counter</td>
                                            <td>@request.Club?.ClubNameAR</td>
                                            <td>
                                                @if (request.Status != null)
                                                {
                                                    <span class="badge
                                                                        @(request.Status.StatusTypeAr.Contains("مقبول") || request.Status.StatusTypeAr.Contains("موافق") ? "bg-success" :
                                                                                                                    request.Status.StatusTypeAr.Contains("مرفوض") || request.Status.StatusTypeAr.Contains("مرفوض") ? "bg-danger" :
                                                                                                                    request.Status.StatusTypeAr.Contains("معلق") || request.Status.StatusTypeAr.Contains("قيد الانتظار") || request.Status.StatusTypeAr.Contains("قيد المراجعة") ? "bg-warning" :
                                                                                                                    request.Status.StatusTypeAr.Contains("ملغي") ? "bg-secondary" : "bg-info")">
                                        @request.Status.StatusTypeAr
                                    </span>
                                                                        }
                                                else
                                                {
                                                    <span class="badge bg-secondary">غير محدد</span>
                                                }
                                            </td>
                                            <td>@request.CreationDate.ToString("yyyy/MM/dd")</td>
                                        </tr>
                                        counter++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</section>