@{
    Layout = null;
}
<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>نشِط</title>
    <!---------------------------------CSS------------------------------------------->
    <link rel="apple-touch-icon" sizes="180x180" href="~/assets/imgs/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assets/imgs/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/imgs/favicon/favicon-16x16.png">
    <link rel="manifest" href="~/assets/imgs/favicon/site.webmanifest">
    <link rel="mask-icon" href="~/assets/imgs/favicon/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" href="~/assets/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="~/assets/css/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/assets/css/root.css">

    <!--------- CSS Liberaries ---------->
    <!-- Data Table -->
    <!-- <link rel="stylesheet" href="~/assets/lib/DataTable/css/select.dataTables.min.css" /> -->
    <!-- <link rel="stylesheet" href="~/assets/lib/DataTable/css/datatables_customization.css" /> -->
    <!-- customization -->
    <link rel="stylesheet" href="~/assets/css/app_rtl.css">
</head>
<body class="vertical-layout vertical-menu-modern boxicon-layout no-card-shadow 1-column  navbar-sticky footer-static bg-full-screen-image  blank-page blank-page" data-open="click" data-menu="vertical-menu-modern" data-col="1-column">
    <div class="login-wrapper d-flex justify-content-center align-items-center min-vh-100 bg-light">
        <div class="login-card p-4 shadow rounded-4" style="max-width: 420px; width: 100%; background-color: #fff;">
            <div class="text-center mb-4">
                <img src="~/Assets/imgs/favicon/logoNA.jpg" alt="شعار الموقع" style="max-height: 120px; max-width: 100%;">
                <h3 class="fw-bold text-primary">تسجيل الدخول</h3>
                <p class="text-muted small">يرجى إدخال بياناتك للمتابعة</p>
            </div>
            <form asp-action="Login">
                @if (ViewData["Login_error"] != null)
                {
                    <p id="Error" class="card-text text-danger text-center mb-3" style="color:red">
                        @ViewData["Login_error"]
                    </p>
                }

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="username" placeholder="اسم المستخدم" name="UserName" required>
                    <label for="username">اسم المستخدم</label>
                </div>

                <div class="form-floating mb-4">
                    <input type="password" class="form-control" id="password" placeholder="كلمة المرور" name="Password" required>
                    <label for="password">كلمة المرور</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold shadow-sm">
                    <i class="bx bx-log-in-circle me-1"></i> تسجيل الدخول
                </button>


            </form>


        </div>
    </div>
    <footer class="text-white text-center py-3 px-3" style="background-color: #0f7179;">
        جميع الحقوق محفوظة لجامعة الملك فيصل 2025 © | تصميم وتطوير عمادة التعلم الإلكتروني وتقنية المعلومات
    </footer>
</body>
</html>
